<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_layout"
    tools:context=".ui.DamageDetailActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
        <TextView
            android:id="@+id/tv_monster_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tv_monster_cr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"/>

        <TextView
            android:id="@+id/tv_monster_size_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"/>

        <TextView
            android:id="@+id/tv_monster_alignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/tv_monster_hp_hd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/tv_monster_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/tv_monster_stats_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"/>
        <TextView
            android:id="@+id/tv_monster_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"/>
                    <TextView
                        android:id="@+id/tv_monster_speed_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadline6"/>
        <TextView
            android:id="@+id/tv_monster_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/tv_monster_proficiencies_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_proficiencies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_vulnerabilities_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_vulnerabilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_resistances_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_resistances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_immunities_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_immunities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_languages_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
                <TextView
                    android:id="@+id/tv_monster_special_abilities_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_monster_special_abilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tv_monster_actions_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tv_monster_legendary_actions_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_monster_legendary_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:visibility="visible"/>
            </LinearLayout>
        </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>